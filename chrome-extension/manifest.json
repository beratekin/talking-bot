{
	"manifest_version": 3,
	"name": "Talking-Bot",
	"version": "3.0.0",
	"description": "A talkig bot to make a conversation using ChatGPT. It is designed to make the conversation flow.",
	"action": {
		"default_popup": "popup.html",
		"default_icon": {              
		  "16": "images/icon-16.png",
		  "32": "images/icon-32.png"
		},
		"default_title": "Talk-Bot V3.0.0"
	},
	"content_scripts":[
		{
			"matches":[
				"https://chat.openai.com/*"
			],
			"js": ["jquery.min.js", "fontawesome.min.js", "content.js"]
		}
	],
	"icons": {
		"16": "images/icon-16.png",
		"32": "images/icon-32.png",
		"48": "images/icon-48.png",
		"128": "images/icon-128.png"
	}
}